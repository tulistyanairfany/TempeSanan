<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.BerandaFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/beranda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Keripik Tempe Sanan"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textSize="26sp"
        android:textColor="#B69C59"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btntransaksi"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/round_menu"
        android:drawableTop="@drawable/transaksi"
        android:fontFamily="@font/poppins_semibold"
        android:onClick="Pindah"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="5dp"
        android:text="Transaksi"
        android:textColor="#B69C59" />

    <Button
        android:id="@+id/btnproduk"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/round_menu"
        android:drawableTop="@drawable/produk"
        android:fontFamily="@font/poppins_semibold"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="5dp"
        android:text="Produk"
        android:textColor="#B69C59" />

    <Button
        android:id="@+id/btnpelanggan"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="510dp"
        android:background="@drawable/round_menu"
        android:drawableTop="@drawable/customer"
        android:fontFamily="@font/poppins_semibold"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="5dp"
        android:text="Pelanggan"
        android:textColor="#B69C59" />
</RelativeLayout>